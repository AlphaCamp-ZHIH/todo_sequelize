<div class="container">

  <div class="mb-5 row no-gutters align-items-center bg-light rounded">
    <form action="/todos/{{todo._id}}?_method=PUT" method="POST" class="col-11 row no-gutters justify-content-between align-items-center p-2" >
      <div class="col-1 input-group">
        <div class="input-group-text">
          <label class="mr-1" for="isDone">完成</label>
          <input class="p-3" type="checkbox" name="isDone" id="isDone" {{#if todo.isDone }} checked {{/if}}>
        </div>
      </div>

      <input class="col-8 ml-4 p-2" type="text" name="name" value="{{todo.name}}">

      <div class="col-2 row no-gutters form-group justify-content-end mb-0">
        <button type="submit" class="col-7 btn btn-primary  p-2">儲存</button>
      </div>
    </form>
    <form class="col-1 d-flex justify-content-end" action="/todos/{{todo._id}}?_method=DELETE" method="POST">
      <button type="submit" class="w-100 btn btn-secondary p-2">刪除</button>
    </form>
  </div>

</div>